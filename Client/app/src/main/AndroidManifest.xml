<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="homework.com.bingeeatingproject">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-feature android:name="android.hardware.location.gps" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.media.action.IMAGE_CAPTURE" />

    <uses-feature
        android:name="android.hardware.camera2.any"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.camera2.autofocus"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".HomeActivity" />
        <activity android:name=".PhysicalActivity" />
        <activity android:name=".FoodActivity" />
        <activity android:name=".QuickLog" />
        <activity android:name=".AddWeeklyDetails" />
        <activity android:name=".DetailsFoodActivity" />
        <activity android:name=".DetailsPhysical" />
        <activity android:name=".EditPhysicalDetails" />
        <activity android:name=".EditFoodDetails" />
        <activity android:name=".DetailsWeeklyActivity" />
        <activity android:name=".EditWeeklyDetails" />
        <activity android:name=".Appointments"></activity>
    </application>

</manifest>